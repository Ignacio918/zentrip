{
  "version": 2,
  "builds": [
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/viator-tours.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/viator/products/search",
      "dest": "/api/viator-tours",
      "methods": ["POST"]
    },
    {
      "src": "^/(?!viator/).*$",
      "dest": "/dist/$1"
    },
    {
      "src": "^/(?!viator/).*$",
      "dest": "/index.html"
    }
  ]
}
